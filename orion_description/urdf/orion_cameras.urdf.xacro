        <!-- Joint Maixsense -->
        <joint name="maixsense_joint" type="fixed">
            <parent link="maixsense_sup"/>
            <child link="maixsense"/>
            <origin xyz="0 0 0.0205" rpy="0 0 0"/>
        </joint>
    </xacro:if>
</robot>